# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/user-registration
# Optional database name override (otherwise taken from URI)
# MONGODB_DB=user-registration

# Bcrypt salt rounds (integer)
BCRYPT_SALT_ROUNDS=10

# React frontend origin for CORS
FRONTEND_ORIGIN=http://localhost:5173

# Server port
PORT=3000

# JWT Auth (required for JWT/Refresh flow)
JWT_ACCESS_SECRET=change-me-access
JWT_REFRESH_SECRET=change-me-refresh
# e.g. 15m, 1h
JWT_ACCESS_TTL=15m
# e.g. 7d, 30d
JWT_REFRESH_TTL=7d
